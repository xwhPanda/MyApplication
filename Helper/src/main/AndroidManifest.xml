<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiqu.helper">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.jiqu.helper.application.HelperApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.DetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.RecommendActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.UninstallActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ClearCacheActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.SearchActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.AccountInfoActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>