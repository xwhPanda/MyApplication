<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/topBlue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/account_icon"/>

        <RelativeLayout
            android:id="@+id/searchRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/account"
            android:layout_centerVertical="true"
            android:background="@mipmap/search_edit_bg">

            <EditText
                android:id="@+id/searchEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColorHint="@color/bottomItemNameDefaultColor"
                android:text="搜索"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:background="@color/transparent"/>

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/search_icon"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>